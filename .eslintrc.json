{
  "root": true,
  "extends": "@nwoltman/eslint-config",
  "overrides": [
    {
      "files": ["test/**/*.js"],
      "env": {
        "mocha": true
      },
      "rules": {
        "curly": [2, "multi-line", "consistent"],
        "max-nested-callbacks": 0,
        "max-len": 0,
        "new-cap": 0,
        "no-empty-function": 0,
        "no-sync": 0,
        "padded-blocks": 0,
        "prefer-arrow-callback": 0
      }
    }
  ]
}
